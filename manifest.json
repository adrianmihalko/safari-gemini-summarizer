{
  "manifest_version": 3,
  "name": "Gemini Page Summarizer",
  "version": "1.0",
  "description": "Summarizes the current page using Google's Gemini API.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup/index.html",
    "default_title": "Summarize Page"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "icons/icon.svg"
  }
}